<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?themePrimary</item>
        <item name="colorPrimaryDark">?themePrimaryDark</item>
        <item name="colorAccent">?themeAccent</item>
        <item name="android:windowReenterTransition">@android:transition/slide_top</item>
    </style>

    <style name="AppTheme.NoActionBar.Indigo">
        <item name="themePrimary">@color/white</item>
        <item name="themePrimaryDark">@color/lightYellow</item>
        <item name="themeBackgroundStart">@color/goldDark</item>
        <item name="themeBackgroundEnd">@color/goldAccent</item>
        <item name="themeAccent">@color/goldAccent</item>
        <item name="themeContentBackground">@color/white</item>
        <item name="themeBarTextColor">@color/black</item>
        <item name="themeContentTextColor">@color/white</item>
        <item name="themeContentTextColoOnPrimary">@color/white</item>
        <item name="themeTextColorSuccess">@color/green</item>
        <item name="themeTextColorFailure">@color/red</item>
    </style>

    <style name="AppTheme.NoActionBar.DarkRed">
        <item name="themePrimary">@color/redDark</item>
        <item name="themePrimaryDark">@color/black</item>
        <item name="themeBackgroundStart">@color/redDark</item>
        <item name="themeBackgroundEnd">@color/greenGray</item>
        <item name="themeAccent">@color/goldDarkAccent</item>
        <item name="themeContentBackground">@color/white</item>
        <item name="themeBarTextColor">@color/white</item>
        <item name="themeContentTextColor">@color/white</item>
        <item name="themeContentTextColoOnPrimary">@color/white</item>
        <item name="themeTextColorSuccess">@color/green</item>
        <item name="themeTextColorFailure">@color/red</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="text_layout_style" parent="AppTheme.NoActionBar">

        <item name="android:textColorHint">?themeContentTextColor</item>
        <item name="android:textSize">@dimen/form_header_size</item>
        <item name="hintTextAppearance">@style/hint_text</item>
        <item name="errorTextAppearance">@style/error_text</item>


        <item name="colorAccent">?themeContentTextColor</item>
        <item name="colorControlNormal">?themeContentTextColor</item>
        <item name="colorControlActivated">?themeContentTextColor</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
    </style>

    <style name="input_text_style" parent="AppTheme.NoActionBar">

        <item name="android:textColor">?themeContentTextColor</item>
        <item name="android:textColorHint">?themeContentTextColor</item>
        <item name="backgroundTint">?themeContentTextColor</item>

        <item name="android:inputType">text</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="hint_text">
        <item name="android:textColor">?themeContentTextColor</item>
        <item name="android:textSize">@dimen/form_header_size</item>
    </style>

    <style name="error_text">
        <item name="android:textColor">?themeTextColorFailure</item>
        <item name="android:textSize">@dimen/form_error_size</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColorPrimary">?themeBarTextColor</item>
        <item name="android:textColorSecondary">?themeBarTextColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

</resources>
